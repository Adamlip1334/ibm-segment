{
  "compilerOptions": {
    "module": "NodeNext", // or "NodeNext" if you're targeting Node.js specifically with the latest features
    "target": "ESNext", // Adjust based on your environment
    "moduleResolution": "NodeNext", // This is important for Node.js ESM support
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
